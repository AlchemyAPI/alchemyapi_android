			<manifest>
				<attribute name="Main-Class" value="com.alchemyapi.test.FeedLinksTest"/>
				<attribute name="Class-Path" value="AlchemyAPI.jar"/>
			</manifest>
			<fileset dir="${bin}">
				<include name="**/test/FeedLink**"/>
			</fileset>
		</jar>
	 	
